<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import code.controls.Controller?>
<?import code.controls.Canvas?>
<?import javafx.scene.image.ImageView?>
<fx:root type="javafx.scene.layout.GridPane" xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
    <VBox>
        <MenuBar>
            <Menu text="File">
                <MenuItem fx:id="computeOutput" text="Compute output"/>
                <MenuItem fx:id="clearCanvas" text="Clear canvas"/>
            </Menu>
        </MenuBar>
        <HBox>
            <Canvas fx:id="canvas"/>
            <ScrollPane prefWidth="1000">
                <Pane maxWidth="1000">
                    <ImageView fx:id="viewport" fitWidth="800" preserveRatio="true"/>
                </Pane>
            </ScrollPane>
        </HBox>
    </VBox>
</fx:root>